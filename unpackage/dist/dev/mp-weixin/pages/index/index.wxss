.content {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}
.content .waterfall {
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.content .waterfall .waterfall-item {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  position: relative;
  background-color: #fff;
}
.content .waterfall .waterfall-item .item-title {
  font-size: 30rpx;
  margin-top: 10rpx;
  color: #303133;
}
.content .waterfall .waterfall-item .item-times {
  font-size: 24rpx;
  color: #777;
  margin-top: 10rpx;
}
.content .waterfall .waterfall-item .item-tags {
  width: 100%;
  display: flex;
  margin-top: 10rpx;
  /* 第 1 个 .tag 的样式 */
  /* 第 2 个 .tag 的样式（如果需要） */
}
.content .waterfall .waterfall-item .item-tags .tag:nth-child(1) {
  color: #ffaa00;
  border: 1px solid #fca381;
}
.content .waterfall .waterfall-item .item-tags .tag:nth-child(2) {
  color: #00aaff;
  border: 1px solid #00aaff;
}
.content .waterfall .waterfall-item .item-tags .tag {
  font-size: 20rpx;
  padding: 4rpx 14rpx;
  border-radius: 50rpx;
  margin-right: 10rpx;
  /* 增加间距避免拥挤 */
}
.content .waterfall .waterfall-item .item-dot {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 3rpx 10rpx;
  border: 1rpx solid red;
  color: #fff;
  background-color: red;
  border-radius: 10rpx;
}
.content .top {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  right: 30rpx;
  bottom: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}