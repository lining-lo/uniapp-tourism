.my-containter {
  width: 100%;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}
.my-containter .containter-top {
  width: 100%;
  height: 300rpx;
  background-color: #52a7f9;
  box-sizing: border-box;
}
.my-containter .containter-top .top-btn {
  width: 94%;
  height: 80rpx;
  padding: 60rpx 20rpx;
  margin: 0 auto;
  box-sizing: border-box;
  background-color: #52a7f9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}
.my-containter .containter-top .top-btn .btn-left {
  display: flex;
  align-items: center;
}
.my-containter .containter-top .top-btn .btn-right {
  display: flex;
  align-items: center;
}
.my-containter .containter-top .top-card {
  width: 94%;
  height: 300rpx;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.my-containter .containter-top .top-card .card-user {
  width: 100%;
  height: 50%;
  padding: 20rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.my-containter .containter-top .top-card .card-user .user-avator {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-color: orange;
}
.my-containter .containter-top .top-card .card-user .user-avator image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.my-containter .containter-top .top-card .card-info {
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: space-around;
}
.my-containter .containter-top .top-card .card-info .info-praise {
  width: 80rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.my-containter .container-list {
  width: 100%;
  margin-top: 200rpx;
  box-sizing: border-box;
}
.my-containter .container-list .list-item {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
  background-color: #fff;
  font-size: 26rpx;
}
.my-containter .container-list .list-item .item-left {
  display: flex;
  align-items: center;
}
.my-containter .container-list .list-item .item-right {
  display: flex;
  align-items: center;
}
.my-containter .popup {
  padding: 20rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.my-containter .popup .popup-title {
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 40rpx;
}